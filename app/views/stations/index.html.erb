      <input type="checkbox" onclick="handleClick(this)" name="line" value="3" checked="checked"> 3<br>
      <input type="checkbox" onclick="handleClick(this)" name="line" value="4" checked="checked"> 4<br>
      <input type="checkbox" onclick="handleClick(this)" name="line" value="5" checked="checked"> 5<br>
      <input type="checkbox" onclick="handleClick(this)" name="line" value="6" checked="checked"> 6<br>
      <input type="checkbox" onclick="handleClick(this)" name="line" value="L" checked="checked"> L<br>
    </form>

  </body>
</html>
