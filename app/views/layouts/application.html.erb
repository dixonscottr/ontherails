<!DOCTYPE html>
<html>
  <head>
    <title>Ontherails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div class='navBar toggle' id="navBar">
    <img src="http://www.allyseeley.com/wp-content/uploads/2016/09/OtR-01-768x481.png" width="100px"/>
      <!-- <form id="select-lines" class="form-check-inline"> -->
    		<button data-toggle="button" aria-pressed="false" data-target="#myModal" class="btn btn-circle raised btn-primary checked" onclick="handleClick(this)" name="line" value="1">1</button>
        <button data-toggle="button" aria-pressed="false" class="btn btn-circle raised btn-info checked" onclick="handleClick(this)" name="line" value="2">2</button>
      	<button data-toggle="modal" data-target="#myModal" class="btn btn-circle raised btn-default checked" onclick="handleClick(this)" name="line" value="3">3</button>
        <button data-toggle="modal" data-target="#myModal" class="btn btn-circle raised btn-success checked" onclick="handleClick(this)" name="line" value="4">4</button>
      	<button data-toggle="modal" data-target="#myModal" class="btn btn-circle raised btn-warning checked" onclick="handleClick(this)" name="line" value="5">5</button>
      	<button data-toggle="modal" data-target="#myModal" class="btn btn-circle raised btn-danger checked" onclick="handleClick(this)" name="line" value="6">6</button>
      <!-- </form> -->

    </div>
      <div class="container-fluid">


    <div class="container-fluid">

    <%= yield %>
    <footer>
      <form id='train-updater' action='/update_trains' method='get'>
        <input type='submit' value='Update these trains' />
      </form>
      <div class='train-locations'>
        <h2>Things go here</h2>
      </div>
    </footer>
  </div>
  </body>
</html>
